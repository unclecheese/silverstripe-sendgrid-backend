{
    "name": "unclecheese/silverstripe-sendgrid-mailer",
    "description": "A drop-in mailer replacement for SendGrid",
    "type": "silverstripe-vendormodule",
    "homepage": "https://github.com/unclecheese/silverstripe-sendgrid-mailer",
    "license": "BSD-3-Clause",
    "keywords": [
        "silverstripe",
        "mailer",
        "sendgrid"
    ],
    "authors": [
        {
            "name": "Uncle Cheese",
            "email": "unclecheese@leftandmain.com"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "silverstripe/framework": "^4.9",
        "silverstripe/vendor-plugin": "^1",
        "sendgrid/sendgrid": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "UncleCheese\\SendGridMailer\\": "src/",
            "UncleCheese\\SendGridMailer\\Tests\\": "tests/"

        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs src/ tests/",
        "lint-clean": "vendor/bin/phpcbf src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
